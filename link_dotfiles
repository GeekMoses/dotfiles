#!/bin/bash

PWD=$(pwd)
FILES="vimrc tmux.conf gitconfig"

# You're in a bad place if this happens
if [ -z $HOME ]
then
    printf "\$HOME is not set\n"
fi

for i in $FILES
do
  printf "Linking $PWD/$i to $HOME/.$i "

  if [ -e $HOME/.$i ]
  then
    mv $HOME/.$i $HOME/.$i-old
  fi
  ln -nsf $PWD/$i $HOME/.$i
done
