[include]
  path = ~/.gitconfig.local

# At a minimum, you want the user section in .gitconfig.local
#[user]
#  name = "Your Name"
#  email = name@example.com

[push]
  default = current
[core]
  editor = vim
  pager = less -r
[color]
  ui = true
  interactive = auto
[alias]
  s = status
  b = branch
  co = checkout
  ci = commit -a
  lp = log -p
  dno = diff --name-only origin/master
  mo = merge --no-edit origin/master
  rhh = reset --hard HEAD
  dm = diff origin/master...
  hist = log --all --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
  cl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff 
[difftool]
	prompt = false
